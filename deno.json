{
	"tasks": {
		"dev": "deno run -A npm:@tauri-apps/cli dev",
		"build": "deno run -A npm:@tauri-apps/cli build",
		"lint": "deno lint",
		"format": "deno fmt",
		"check": "deno check",
		"tauri": "deno run -A npm:@tauri-apps/cli",
		"vite": "deno run -A npm:vite"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSourceTypes": "types-react",
		"lib": ["dom", "dom.iterable", "es2023", "esnext.iterator", "deno.ns"]
	},
	"fmt": {
		"semiColons": false,
		"useTabs": true,
		"exclude": [".vite", "dist"]
	},
	"nodeModulesDir": "auto",
	"exclude": ["src-tauri", ".vite", "dist"]
}
